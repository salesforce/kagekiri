{
  "name": "kagekiri",
  "version": "1.1.0",
  "description": "Shadow DOM-piercing querySelector/querySelectorAll implementation",
  "main": "dist/kagekiri.cjs.js",
  "module": "dist/kagekiri.es.js",
  "types": "types/kagekiri.d.ts",
  "scripts": {
    "test": "karma start --single-run",
    "test:debug": "karma start --browsers=Chrome --single-run=false",
    "test:bundlesize": "bundlesize",
    "build": "rollup -c",
    "prepare": "npm run build",
    "lint": "standard *.js src/**/*.js test/**/*.js",
    "lint:fix": "standard --fix *.js src/**/*.js test/**/*.js"
  },
  "keywords": [
    "shadowdom",
    "shadow",
    "dom",
    "CSS",
    "selector",
    "querySelector",
    "querySelectorAll"
  ],
  "author": {
    "email": "nlawson@salesforce.com",
    "name": "Nolan Lawson"
  },
  "license": "BSD-3-Clause",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "assert": "^2.0.0",
    "bundlesize": "^0.18.0",
    "husky": "^4.3.0",
    "karma": "^5.2.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.5",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "object-assign": "^4.1.1",
    "postcss-selector-parser": "^6.0.3",
    "rollup": "^2.26.11",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard": "^14.3.4",
    "string.prototype.endswith": "^0.2.0",
    "string.prototype.startswith": "^0.2.0"
  },
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salesforce/kagekiri.git"
  },
  "bugs": {
    "url": "https://github.com/salesforce/kagekiri/issues"
  },
  "homepage": "https://github.com/salesforce/kagekiri#readme",
  "sideEffects": false,
  "bundlesize": [
    {
      "path": "./dist/kagekiri.iife.min.js",
      "maxSize": "55 kB",
      "compression": "none"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": "standard --fix"
  },
  "standard": {
    "ignore": [
      "types/"
    ]
  }
}
