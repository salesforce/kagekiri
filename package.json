{
  "name": "kagekiri",
  "version": "1.0.14",
  "description": "Shadow DOM-piercing querySelector/querySelectorAll implementation",
  "main": "dist/kagekiri.cjs.js",
  "module": "dist/kagekiri.es.js",
  "scripts": {
    "test": "karma start --single-run",
    "test:debug": "karma start --browsers=Chrome --single-run=false",
    "build": "rollup -c",
    "prepare": "npm run build",
    "lint": "standard *.js src/**/*.js test/**/*.js",
    "lint:fix": "standard --fix *.js src/**/*.js test/**/*.js"
  },
  "keywords": [
    "shadowdom",
    "shadow",
    "dom",
    "CSS",
    "selector",
    "querySelector",
    "querySelectorAll"
  ],
  "author": {
    "email": "nlawson@salesforce.com",
    "name": "Nolan Lawson"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "postcss-selector-parser": "^6.0.2"
  },
  "devDependencies": {
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-rollup": "^1.0.1",
    "karma-rollup-preprocessor": "^7.0.0",
    "mocha": "^6.1.4",
    "object-assign": "^4.1.1",
    "rollup": "^1.11.3",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-inject": "^2.2.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "standard": "^12.0.1"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salesforce/kagekiri.git"
  },
  "bugs": {
    "url": "https://github.com/salesforce/kagekiri/issues"
  },
  "homepage": "https://github.com/salesforce/kagekiri#readme"
}
